{
  "name": "node_auth_backend_tutorial",
  "version": "0.0.1",
  "description": "Tutorial about Oath2 ",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha --timeout 5000 __tests__/server/**/*.test.js",
    "report": "NODE_ENV=test nyc --reporter=lcov mocha --timeout 5000 __tests__/server/**/*.test.js",
    "text-report": "NODE_ENV=test nyc --reporter=text-sumary mocha --timout 5000",
    "nyc": "NODE_ENV=test nyc mocha --timeout 5000 __tests__/server/**/*.test.js",
    "build": "npm run backend-build && npm run frontend-build",
    "backend-build": "tsc --build tsconfig.server.json",
    "backend-start-dev": "NODE_ENV=development nodemon -e ts,js --watch server/ --exec \"npm run backend-build && node build/server/index.js --harmony\"",
    "backend-start": "NODE_ENV=production node build/server/index.js",
    "frontend-start-dev": "NODE_ENV=development npm run start --prefix client",
    "frontend-build": "tsc --build tsconfig.client.json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express-mongo-sanitize": "^2.1.0",
    "express-promise-router": "^4.1.0",
    "express-rate-limit": "^5.3.0",
    "google-auth-library": "^7.3.0",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.2",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-google-verify-token": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "xss": "^1.0.9",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/hpp": "^0.2.2",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^15.14.1",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.30.0",
    "faker": "^5.5.3",
    "mocha": "^9.0.2",
    "nodemon": "^2.0.9",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "rewire": "^5.0.0",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0"
  },
  "nyc": {
    "exclude": [
      "__tests__",
      "node_modules"
    ],
    "cache": false,
    "report-dir": "./__tests__/report"
  }
}
